---
import SocialLink from './SocialLink.astro'
import { SITE_TITLE } from '../config'
---

<header>
    <h2>
        {SITE_TITLE}
    </h2>
    <nav>
        <SocialLink href="/">Home</SocialLink>
        <SocialLink href="/blog">Blog</SocialLink>
        <SocialLink href="/about">About</SocialLink>
        <SocialLink href="https://twitter.com/astrodotbuild" target="_blank">Twitter</SocialLink>
        <SocialLink href="https://github.com/withastro/astro" target="_blank">GitHub</SocialLink>
    </nav>
</header>
<style>
    header {
        margin: 0em 0 2em;
    }
    h2 {
        margin: 0.5em 0;
    }
</style>
